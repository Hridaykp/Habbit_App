<!-- Register View -->
<div class="row mt-5">
    <div class="col-md-6 m-auto">
      <div class="card card-body text-center">
        <h1>Habit Tracker
          <br />
          <img src="https://thumbs.dreamstime.com/b/good-habits-results-life-concept-chalkboard-writing-hand-149414968.jpg" alt="Making Habits!" width="30%" />
        </h1>
        <h5 class="text-center mb-3" style="font-family: Nunito;">
          <i class="fas fa-user-plus"></i> Register
        </h5>
        <%- include ("./partials/messages") %>
        <form action="/users/register" method="POST">
          <div class="form-group">
            <label for="name">Name</label>
            <input type="name" id="name" required name="name" class="form-control" placeholder="Enter Name"
              value="<%= typeof name != 'undefined' ? name : '' %>" />
          </div>
          <div class="form-group">
            <label for="email">Email</label>
            <input type="email" id="email" name="email" required class="form-control" placeholder="Enter Email"
              value="<%= typeof email != 'undefined' ? email : '' %>" />
          </div>
          <button type="submit" class="btn btn-primary btn-block" style="font-family: Nunito;">
            Register
          </button>
        </form>
        <p class="lead mt-4">Already User? <a href="/users/login">Login</a></p>
      </div>
    </div>
  </div>